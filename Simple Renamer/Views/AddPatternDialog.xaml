<Window x:Class="Simple_Renamer.Views.AddPatternDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_Renamer.Views"
        mc:Ignorable="d"
        Title="Add Pattern" Height="90" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />            
        </Grid.RowDefinitions>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".27*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="Pattern:" VerticalContentAlignment="Center" Height="25" />
            <TextBox Grid.Column="1" VerticalContentAlignment="Center" Height="25" />
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".55*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Margin="0 0 2 0">Cancel</Button>
            <Button Grid.Column="2" Margin="2 0 0 0">Ok</Button>
        </Grid>
        
    </Grid>
</Window>
